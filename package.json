{
  "name": "wbplive",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "lint": "eslint .",
    "prelint": "npm run lint --silent",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy": "DEPLOY_HOSTNAME=eu-west-1.galaxy.meteor.com meteor deploy wbplive-test.eu.meteorapp.com --settings settings.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "prettier": "prettier --write \"./{imports,.storybook,client,server}/**/*.js\"",
    "preprettier:watch": "npm run prettier",
    "prettier:watch": "onchange '**/*.js' -- prettier --write {{changed}}"
  },
  "dependencies": {
    "@babel/runtime": "7.0.0-beta.55",
    "bcrypt": "^1.0.3",
    "just-random": "^2.0.0",
    "material-ui": "^0.20.0",
    "meteor-node-stubs": "^0.4.1",
    "normalize.css": "^8.0.0",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-loadable": "^5.3.1",
    "react-minimal-pie-chart": "^3.0.1",
    "react-motion": "^0.5.0",
    "react-router-dom": "^4.2.2",
    "react-sortable-hoc": "^0.6.7",
    "simpl-schema": "^1.4.2"
  },
  "devDependencies": {
    "@babel/core": "7.0.0-beta.55",
    "@babel/preset-env": "7.0.0-beta.55",
    "@babel/preset-react": "7.0.0-beta.55",
    "@storybook/react": "^3.3.15",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-root-slash-import": "^1.1.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-meteor": "^0.4.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-meteor": "^4.2.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^22.4.3",
    "onchange": "^3.3.0",
    "prettier": "1.11.1",
    "storybook-addon-material-ui": "^0.8.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "meteor",
      "prettier"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended",
      "prettier"
    ],
    "settings": {
      "import/resolver": "meteor"
    },
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "import/no-absolute-path": [
        0
      ],
      "import/no-extraneous-dependencies": "off",
      "import/extensions": "off",
      "no-use-before-define": [
        "warn",
        {
          "functions": false,
          "variables": false
        }
      ],
      "consistent-this": [
        1,
        "self"
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id"
          ]
        }
      ],
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  }
}
